<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2D2D"
    android:orientation="vertical" >

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" >
       <ImageView
        android:id="@+id/proxy_icon2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/proxy" />
       <ImageView
            android:id="@+id/proxy_icon2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_attendance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="YOUR TODAY's ATTENDANCE"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="No. of Classes Commenced Today"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

         <EditText
            android:id="@+id/today_total"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="00"
            android:textColor="#FFFFFF"
            android:inputType="number" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="No. of Attended Classes"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

         <EditText
            android:id="@+id/today_attended"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="00"
            android:textColor="#FFFFFF"
            android:inputType="number" />

             <Button
            android:id="@+id/button5_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#ffffff"
            android:text="SAVE" >
        </Button>

       </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>